<Window
    x:Class="ArudinoConnect.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controlsex="clr-namespace:chkam05.Tools.ControlsEx;assembly=chkam05.Tools.ControlsEx"
    xmlns:conv="clr-namespace:ArudinoConnect.Converters"
    xmlns:im="clr-namespace:chkam05.Tools.ControlsEx.InternalMessages;assembly=chkam05.Tools.ControlsEx"
    xmlns:local="clr-namespace:ArudinoConnect.Windows"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:statics="clr-namespace:ArudinoConnect.Static"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:tempSel="clr-namespace:ArudinoConnect.Themes.TemplateSelectors"
    mc:Ignorable="d"
    
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    Icon="/AppIco.ico"
    Title="Arduino Connect"
    Height="500"
    Width="900"
    Closing="Window_Closing"
    PreviewKeyDown="Window_PreviewKeyDown">

    <Window.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/WeatherTemplates.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- CONST -->
            <Color x:Key="Colors.Red">Red</Color>
            <Color x:Key="Colors.Rust">#DA3B01</Color>
            <Color x:Key="Colors.Orange">#F7630C</Color>
            <Color x:Key="Colors.Gold">#FF8C00</Color>
            <Color x:Key="Colors.Yellow">Yellow</Color>
            <Color x:Key="Colors.Green">Green</Color>
            <Color x:Key="Colors.Mint">#10893E</Color>
            <Color x:Key="Colors.Aqua">#00B7C3</Color>
            <Color x:Key="Colors.BrightBlue">#0099BC</Color>
            <Color x:Key="Colors.Turquoise">#0078D4</Color>
            <Color x:Key="Colors.Blue">Blue</Color>
            <Color x:Key="Colors.Violet">#881798</Color>
            <Color x:Key="Colors.Orchid">#9A0089</Color>
            <Color x:Key="Colors.Plum">#BF0077</Color>
            <Color x:Key="Colors.Pink">#E3008C</Color>
            <Color x:Key="Colors.White">White</Color>
            <sys:Int32 x:Key="HoverLight">60</sys:Int32>
            <sys:Int32 x:Key="PressLight">36</sys:Int32>

            <ObjectDataProvider x:Key="EmptyObjectDataProvider" ObjectType="{x:Type sys:Object}"/>

            <!-- CONVERTERS -->
            <conv:BoolInversionConverter x:Key="BoolInversionConverter"/>
            <conv:ButtonInteractionColorConverter x:Key="ButtonInteractionColorConverter"/>
            <conv:ColorSolidBrushConverter x:Key="ColorSolidBrushConverter"/>
            <conv:HourBeepTupleConverter x:Key="HourBeepTupleConverter"/>
            <conv:IntToStr x:Key="IntToStr"/>
            <conv:NullToBool x:Key="NullToBool"/>
            <conv:SerialPortStateStringConverter x:Key="SerialPortStateStringConverter"/>

            <!-- DATA TEMPLATES -->
            <DataTemplate x:Key="DevicesDataTemplate">
                <TextBlock
                    Text="{Binding PortName}"/>
            </DataTemplate>

            <DataTemplate x:Key="HourBeepDataTemplate">
                <TextBlock
                    Text="{Binding Converter={StaticResource HourBeepTupleConverter}, Mode=OneWay}"/>
            </DataTemplate>

            <DataTemplate x:Key="PianoNoteDataTemplate">
                <StackPanel
                    Orientation="Horizontal">

                    <materialDesign:PackIcon
                        Height="16"
                        Kind="MusicNote"
                        Width="16"/>

                    <TextBlock
                        Text="{Binding Note}"
                        VerticalAlignment="Center"/>

                    <TextBlock
                        Margin="8,0,0,0"
                        Text="{Binding Duration}"
                        VerticalAlignment="Center"/>

                </StackPanel>
            </DataTemplate>

            <!-- STYLES -->
            <Style x:Key="LedControlButtonExStyle" TargetType="{x:Type controlsex:ButtonEx}">
                <Setter Property="ContentSide" Value="Bottom"/>
                <Setter Property="CornerRadius" Value="48"/>
                <Setter Property="Height" Value="80"/>
                <Setter Property="IconHeight" Value="24"/>
                <Setter Property="IconWidth" Value="24"/>
                <Setter Property="Margin" Value="2"/>
                <Setter Property="Width" Value="80"/>
            </Style>

            <Style x:Key="LedButtonTextBlockStyle" TargetType="{x:Type TextBlock}">
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Margin" Value="-32,0,-32,-8"/>
                <Setter Property="Padding" Value="0"/>
                <Setter Property="TextAlignment" Value="Center"/>
            </Style>

            <Style x:Key="PianoBaseKeyExtBorderStyle" TargetType="Border">
                <Setter Property="Background" Value="Wheat"/>
                <Setter Property="BorderBrush" Value="Wheat"/>
                <Setter Property="CornerRadius" Value="0,0,16,16"/>
                <Setter Property="Grid.ColumnSpan" Value="2"/>
                <Setter Property="Grid.RowSpan" Value="2"/>
                <Setter Property="Margin" Value="1,0"/>
            </Style>

            <Style x:Key="PianoUpperKeyExtBorderStyle" TargetType="Border">
                <Setter Property="Background" Value="Black"/>
                <Setter Property="BorderBrush" Value="Black"/>
                <Setter Property="CornerRadius" Value="0,0,16,16"/>
                <Setter Property="Grid.ColumnSpan" Value="2"/>
                <Setter Property="Margin" Value="8,0,8,0"/>
            </Style>

            <Style x:Key="PianoItemListViewItemStyle" TargetType="{x:Type controlsex:ListViewItemEx}">
                <Setter Property="BorderBrush" Value="#0078D7"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsBreak}" Value="True">
                        <Setter Property="Background" Value="LightGray"/>
                        <Setter Property="BorderBrush" Value="{x:Null}"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="MinHeight" Value="0"/>
                        <Setter Property="Height" Value="1"/>
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="Width" Value="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType={x:Type WrapPanel}}}"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>

        </ResourceDictionary>
    </Window.Resources>
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <controlsex:TabControlEx
            x:Name="MainTabControlEx"
            BorderBrush="{x:Null}"
            BorderThickness="0"
            HeaderBackground="LightGray"
            HeaderBorderBrush="DarkGray"
            CornerRadius="0"
            HeaderBorderThickness="0,0,0,1"
            Grid.Row="1">

            <controlsex:TabItemEx
                IconKind="Console"
                IconWidth="18"
                Header="Console">

                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border
                        Background="LightGray"
                        BorderBrush="DarkGray"
                        BorderThickness="0,0,0,1"
                        Grid.Row="0"
                        MinHeight="35">

                        <Grid
                            Margin="4">

                            <StackPanel
                                HorizontalAlignment="Right"
                                Orientation="Horizontal">

                                <controlsex:ButtonEx
                                    Content="Clear"
                                    IconHeight="12"
                                    IconKind="Clear"
                                    Click="ConsoleClearButtonEx_Click"/>

                            </StackPanel>
                            
                        </Grid>

                    </Border>

                    <controlsex:TextBoxEx
                        Name="consoleTextBoxEx"
                        AcceptsReturn="True"
                        AcceptsTab="True"
                        BorderBrush="{x:Null}"
                        BorderThickness="0"
                        CornerRadius="0"
                        FontFamily="Cascadia Code PL Light"
                        Grid.Row="1"
                        HorizontalContentAlignment="Left"
                        IsReadOnly="True"
                        Padding="4"
                        ScrollViewer.HorizontalScrollBarVisibility="Auto"
                        ScrollViewer.VerticalScrollBarVisibility="Visible"
                        Text="{Binding Console, Mode=OneWay}"
                        TextWrapping="NoWrap"
                        VerticalAlignment="Stretch"
                        VerticalContentAlignment="Top"/>

                    <Border
                        Background="LightGray"
                        BorderBrush="DarkGray"
                        BorderThickness="0,1,0,0"
                        Grid.Row="2"
                        MinHeight="35">

                        <Grid
                            Margin="4">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <controlsex:TextBoxEx
                                x:Name="MessageTextBoxEx"
                                Background="White"
                                IsEnabled="{Binding DataController.SerialPortConnection.IsConnected}"
                                Grid.Column="0"
                                Margin="0,0,4,0"
                                MouseOverBackground="White"
                                SelectedBackground="White"
                                PreviewKeyDown="MessageTextBoxEx_PreviewKeyDown"
                                Text="{Binding ConsoleMessage}"/>

                            <controlsex:ButtonEx
                                x:Name="SendMessageButtonEx"
                                Grid.Column="1"
                                Content="Send"
                                IconHeight="12"
                                IconKind="Send"
                                IsEnabled="{Binding DataController.SerialPortConnection.IsConnected}"
                                Click="ConsoleSendButtonEx_Click"/>

                        </Grid>
                    </Border>
                    
                </Grid>
            </controlsex:TabItemEx>

            <controlsex:TabItemEx
                IconKind="LedVariantOn"
                IconWidth="18"
                Header="Lights">

                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <controlsex:ScrollViewerEx
                        Grid.Row="0">

                        <WrapPanel
                            Margin="4"
                            Orientation="Horizontal">

                            <Border
                                BorderBrush="Black"
                                BorderThickness="1"
                                CornerRadius="4"
                                Margin="4"
                                Padding="8">

                                <StackPanel
                                    Orientation="Horizontal">

                                    <controlsex:ButtonEx
                                        x:Name="LedOnButtonEx"
                                        IconKind="LedVariantOn"
                                        IsEnabled="{Binding DataController.SerialPortConnection.IsConnected}"
                                        Style="{StaticResource LedControlButtonExStyle}"
                                        Click="LedButtonEx_Click">
                                        <controlsex:ButtonEx.Content>
                                            <TextBlock Style="{StaticResource LedButtonTextBlockStyle}">
                                                <Run Text="Power"/>
                                                <LineBreak/>
                                                <Run Text="On"/>
                                            </TextBlock>
                                        </controlsex:ButtonEx.Content>
                                    </controlsex:ButtonEx>

                                    <controlsex:ButtonEx
                                        x:Name="LedOffButtonEx"
                                        IconKind="LedVariantOff"
                                        IsEnabled="{Binding DataController.SerialPortConnection.IsConnected}"
                                        Style="{StaticResource LedControlButtonExStyle}"
                                        Click="LedButtonEx_Click">
                                        <controlsex:ButtonEx.Content>
                                            <TextBlock Style="{StaticResource LedButtonTextBlockStyle}">
                                                <Run Text="Power"/>
                                                <LineBreak/>
                                                <Run Text="Off"/>
                                            </TextBlock>
                                        </controlsex:ButtonEx.Content>
                                    </controlsex:ButtonEx>

                                </StackPanel>

                            </Border>

                            <Border
                                BorderBrush="Black"
                                BorderThickness="1"
                                CornerRadius="4"
                                Margin="4"
                                Padding="8">

                                <StackPanel
                                    Orientation="Horizontal">

                                    <controlsex:ButtonEx
                                        x:Name="LedBrightnessPlusButtonEx"
                                        IconKind="Plus"
                                        IsEnabled="{Binding DataController.SerialPortConnection.IsConnected}"
                                        Style="{StaticResource LedControlButtonExStyle}"
                                        Click="LedButtonEx_Click">
                                        <controlsex:ButtonEx.Content>
                                            <TextBlock Style="{StaticResource LedButtonTextBlockStyle}">
                                                <Run Text="Brightness"/>
                                                <LineBreak/>
                                                <Run Text="Increase"/>
                                            </TextBlock>
                                        </controlsex:ButtonEx.Content>
                                    </controlsex:ButtonEx>

                                    <controlsex:ButtonEx
                                        x:Name="LedBrightnessMinusButtonEx"
                                        IconKind="Minus"
                                        IsEnabled="{Binding DataController.SerialPortConnection.IsConnected}"
                                        Style="{StaticResource LedControlButtonExStyle}"
                                        Click="LedButtonEx_Click">
                                        <controlsex:ButtonEx.Content>
                                            <TextBlock Style="{StaticResource LedButtonTextBlockStyle}">
                                                <Run Text="Brightness"/>
                                                <LineBreak/>
                                                <Run Text="Decrease"/>
                                            </TextBlock>
                                        </controlsex:ButtonEx.Content>
                                    </controlsex:ButtonEx>

                                </StackPanel>

                            </Border>

                            <Border
                                BorderBrush="Black"
                                BorderThickness="1"
                                CornerRadius="4"
                                Margin="4"
                                Padding="8">

                                <StackPanel
                                    Orientation="Horizontal">

                                    <controlsex:ButtonEx
                                        x:Name="LedFlashButtonEx"
                                        Content="Flash"
                                        IconKind="LedOn"
                                        IsEnabled="{Binding DataController.SerialPortConnection.IsConnected}"
                                        Style="{StaticResource LedControlButtonExStyle}"
                                        Click="LedButtonEx_Click"/>

                                    <controlsex:ButtonEx
                                        x:Name="LedStrobeButtonEx"
                                        Content="Strobe"
                                        IconKind="LedOn"
                                        IsEnabled="{Binding DataController.SerialPortConnection.IsConnected}"
                                        Style="{StaticResource LedControlButtonExStyle}"
                                        Click="LedButtonEx_Click"/>

                                    <controlsex:ButtonEx
                                        x:Name="LedFadeButtonEx"
                                        Content="Fade"
                                        IconKind="LedOn"
                                        IsEnabled="{Binding DataController.SerialPortConnection.IsConnected}"
                                        Style="{StaticResource LedControlButtonExStyle}"
                                        Click="LedButtonEx_Click"/>

                                    <controlsex:ButtonEx
                                        x:Name="LedSmoothButtonEx"
                                        Content="Smooth"
                                        IconKind="LedOn"
                                        IsEnabled="{Binding DataController.SerialPortConnection.IsConnected}"
                                        Style="{StaticResource LedControlButtonExStyle}"
                                        Click="LedButtonEx_Click"/>

                                </StackPanel>

                            </Border>

                            <Separator Height="0" Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType={x:Type WrapPanel}}}"/>

                            <Border
                                BorderBrush="Black"
                                BorderThickness="1"
                                CornerRadius="4"
                                Margin="4"
                                Padding="8">

                                <StackPanel
                                    Orientation="Horizontal">

                                    <controlsex:ButtonEx
                                        x:Name="LedRedButtonEx"
                                        Background="{Binding Source={StaticResource Colors.Red}, Converter={StaticResource ColorSolidBrushConverter}, Mode=OneWay}"
                                        BorderBrush="{Binding Source={StaticResource Colors.Red}, Converter={StaticResource ColorSolidBrushConverter}, Mode=OneWay}"
                                        Content="Red"
                                        IconKind="Color"
                                        IsEnabled="{Binding DataController.SerialPortConnection.IsConnected}"
                                        MouseOverBackground="{Binding Source={StaticResource Colors.Red}, Converter={StaticResource ButtonInteractionColorConverter}, ConverterParameter={StaticResource HoverLight}, Mode=OneWay}"
                                        MouseOverBorderBrush="{Binding Source={StaticResource Colors.Red}, Converter={StaticResource ButtonInteractionColorConverter}, ConverterParameter={StaticResource HoverLight}, Mode=OneWay}"
                                        PressedBackground="{Binding Source={StaticResource Colors.Red}, Converter={StaticResource ButtonInteractionColorConverter}, ConverterParameter={StaticResource PressLight}, Mode=OneWay}"
                                        PressedBorderBrush="{Binding Source={StaticResource Colors.Red}, Converter={StaticResource ButtonInteractionColorConverter}, ConverterParameter={StaticResource PressLight}, Mode=OneWay}"
                                        Style="{StaticResource LedControlButtonExStyle}"
                                        Click="LedButtonEx_Click"/>

                                    <controlsex:ButtonEx
                                        x:Name="LedRustButtonEx"
                                        Background="{Binding Source={StaticResource Colors.Rust}, Converter={StaticResource ColorSolidBrushConverter}, Mode=OneWay}"
                                        BorderBrush="{Binding Source={StaticResource Colors.Rust}, Converter={StaticResource ColorSolidBrushConverter}, Mode=OneWay}"
                                        Content="Rust"
                                        IconKind="Color"
                                        IsEnabled="{Binding DataController.SerialPortConnection.IsConnected}"
                                        MouseOverBackground="{Binding Source={StaticResource Colors.Rust}, Converter={StaticResource ButtonInteractionColorConverter}, ConverterParameter={StaticResource HoverLight}, Mode=OneWay}"
                                        MouseOverBorderBrush="{Binding Source={StaticResource Colors.Rust}, Converter={StaticResource ButtonInteractionColorConverter}, ConverterParameter={StaticResource HoverLight}, Mode=OneWay}"
                                        PressedBackground="{Binding Source={StaticResource Colors.Rust}, Converter={StaticResource ButtonInteractionColorConverter}, ConverterParameter={StaticResource PressLight}, Mode=OneWay}"
                                        PressedBorderBrush="{Binding Source={StaticResource Colors.Rust}, Converter={StaticResource ButtonInteractionColorConverter}, ConverterParameter={StaticResource PressLight}, Mode=OneWay}"
                                        Style="{StaticResource LedControlButtonExStyle}"
                                        Click="LedButtonEx_Click"/>

                                    <controlsex:ButtonEx
                                        x:Name="LedOrangeButtonEx"
                                        Background="{Binding Source={StaticResource Colors.Orange}, Converter={StaticResource ColorSolidBrushConverter}, Mode=OneWay}"
                                        BorderBrush="{Binding Source={StaticResource Colors.Orange}, Converter={StaticResource ColorSolidBrushConverter}, Mode=OneWay}"
                                        Content="Orange"
                                        IconKind="Color"
                                        IsEnabled="{Binding DataController.SerialPortConnection.IsConnected}"
                                        MouseOverBackground="{Binding Source={StaticResource Colors.Orange}, Converter={StaticResource ButtonInteractionColorConverter}, ConverterParameter={StaticResource HoverLight}, Mode=OneWay}"
                                        MouseOverBorderBrush="{Binding Source={StaticResource Colors.Orange}, Converter={StaticResource ButtonInteractionColorConverter}, ConverterParameter={StaticResource HoverLight}, Mode=OneWay}"
                                        PressedBackground="{Binding Source={StaticResource Colors.Orange}, Converter={StaticResource ButtonInteractionColorConverter}, ConverterParameter={StaticResource PressLight}, Mode=OneWay}"
                                        PressedBorderBrush="{Binding Source={StaticResource Colors.Orange}, Converter={StaticResource ButtonInteractionColorConverter}, ConverterParameter={StaticResource PressLight}, Mode=OneWay}"
                                        Style="{StaticResource LedControlButtonExStyle}"
                                        Click="LedButtonEx_Click"/>

                                    <controlsex:ButtonEx
                                        x:Name="LedGlodButtonEx"
                                        Background="{Binding Source={StaticResource Colors.Gold}, Converter={StaticResource ColorSolidBrushConverter}, Mode=OneWay}"
                                        BorderBrush="{Binding Source={StaticResource Colors.Gold}, Converter={StaticResource ColorSolidBrushConverter}, Mode=OneWay}"
                                        Content="Gold"
                                        IconKind="Color"
                                        IsEnabled="{Binding DataController.SerialPortConnection.IsConnected}"
                                        MouseOverBackground="{Binding Source={StaticResource Colors.Gold}, Converter={StaticResource ButtonInteractionColorConverter}, ConverterParameter={StaticResource HoverLight}, Mode=OneWay}"
                                        MouseOverBorderBrush="{Binding Source={StaticResource Colors.Gold}, Converter={StaticResource ButtonInteractionColorConverter}, ConverterParameter={StaticResource HoverLight}, Mode=OneWay}"
                                        PressedBackground="{Binding Source={StaticResource Colors.Gold}, Converter={StaticResource ButtonInteractionColorConverter}, ConverterParameter={StaticResource PressLight}, Mode=OneWay}"
                                        PressedBorderBrush="{Binding Source={StaticResource Colors.Gold}, Converter={StaticResource ButtonInteractionColorConverter}, ConverterParameter={StaticResource PressLight}, Mode=OneWay}"
                                        Style="{StaticResource LedControlButtonExStyle}"
                                        Click="LedButtonEx_Click"/>

                                    <controlsex:ButtonEx
                                        x:Name="LedYellowButtonEx"
                                        Background="{Binding Source={StaticResource Colors.Yellow}, Converter={StaticResource ColorSolidBrushConverter}, Mode=OneWay}"
                                        BorderBrush="{Binding Source={StaticResource Colors.Yellow}, Converter={StaticResource ColorSolidBrushConverter}, Mode=OneWay}"
                                        Content="Yellow"
                                        IconKind="Color"
                                        IsEnabled="{Binding DataController.SerialPortConnection.IsConnected}"
                                        MouseOverBackground="{Binding Source={StaticResource Colors.Yellow}, Converter={StaticResource ButtonInteractionColorConverter}, ConverterParameter={StaticResource HoverLight}, Mode=OneWay}"
                                        MouseOverBorderBrush="{Binding Source={StaticResource Colors.Yellow}, Converter={StaticResource ButtonInteractionColorConverter}, ConverterParameter={StaticResource HoverLight}, Mode=OneWay}"
                                        PressedBackground="{Binding Source={StaticResource Colors.Yellow}, Converter={StaticResource ButtonInteractionColorConverter}, ConverterParameter={StaticResource PressLight}, Mode=OneWay}"
                                        PressedBorderBrush="{Binding Source={StaticResource Colors.Yellow}, Converter={StaticResource ButtonInteractionColorConverter}, ConverterParameter={StaticResource PressLight}, Mode=OneWay}"
                                        Style="{StaticResource LedControlButtonExStyle}"
                                        Click="LedButtonEx_Click"/>

                                </StackPanel>

                            </Border>

                            <Border
                                BorderBrush="Black"
                                BorderThickness="1"
                                CornerRadius="4"
                                Margin="4"
                                Padding="8">

                                <StackPanel
                                    Orientation="Horizontal">

                                    <controlsex:ButtonEx
                                        x:Name="LedGreenButtonEx"
                                        Background="{Binding Source={StaticResource Colors.Green}, Converter={StaticResource ColorSolidBrushConverter}, Mode=OneWay}"
                                        BorderBrush="{Binding Source={StaticResource Colors.Green}, Converter={StaticResource ColorSolidBrushConverter}, Mode=OneWay}"
                                        Content="Green"
                                        IconKind="Color"
                                        IsEnabled="{Binding DataController.SerialPortConnection.IsConnected}"
                                        MouseOverBackground="{Binding Source={StaticResource Colors.Green}, Converter={StaticResource ButtonInteractionColorConverter}, ConverterParameter={StaticResource HoverLight}, Mode=OneWay}"
                                        MouseOverBorderBrush="{Binding Source={StaticResource Colors.Green}, Converter={StaticResource ButtonInteractionColorConverter}, ConverterParameter={StaticResource HoverLight}, Mode=OneWay}"
                                        PressedBackground="{Binding Source={StaticResource Colors.Green}, Converter={StaticResource ButtonInteractionColorConverter}, ConverterParameter={StaticResource PressLight}, Mode=OneWay}"
                                        PressedBorderBrush="{Binding Source={StaticResource Colors.Green}, Converter={StaticResource ButtonInteractionColorConverter}, ConverterParameter={StaticResource PressLight}, Mode=OneWay}"
                                        Style="{StaticResource LedControlButtonExStyle}"
                                        Click="LedButtonEx_Click"/>

                                    <controlsex:ButtonEx
                                        x:Name="LedMintButtonEx"
                                        Background="{Binding Source={StaticResource Colors.Mint}, Converter={StaticResource ColorSolidBrushConverter}, Mode=OneWay}"
                                        BorderBrush="{Binding Source={StaticResource Colors.Mint}, Converter={StaticResource ColorSolidBrushConverter}, Mode=OneWay}"
                                        Content="Mint"
                                        IconKind="Color"
                                        IsEnabled="{Binding DataController.SerialPortConnection.IsConnected}"
                                        MouseOverBackground="{Binding Source={StaticResource Colors.Mint}, Converter={StaticResource ButtonInteractionColorConverter}, ConverterParameter={StaticResource HoverLight}, Mode=OneWay}"
                                        MouseOverBorderBrush="{Binding Source={StaticResource Colors.Mint}, Converter={StaticResource ButtonInteractionColorConverter}, ConverterParameter={StaticResource HoverLight}, Mode=OneWay}"
                                        PressedBackground="{Binding Source={StaticResource Colors.Mint}, Converter={StaticResource ButtonInteractionColorConverter}, ConverterParameter={StaticResource PressLight}, Mode=OneWay}"
                                        PressedBorderBrush="{Binding Source={StaticResource Colors.Mint}, Converter={StaticResource ButtonInteractionColorConverter}, ConverterParameter={StaticResource PressLight}, Mode=OneWay}"
                                        Style="{StaticResource LedControlButtonExStyle}"
                                        Click="LedButtonEx_Click"/>

                                    <controlsex:ButtonEx
                                        x:Name="LedAquaButtonEx"
                                        Background="{Binding Source={StaticResource Colors.Aqua}, Converter={StaticResource ColorSolidBrushConverter}, Mode=OneWay}"
                                        BorderBrush="{Binding Source={StaticResource Colors.Aqua}, Converter={StaticResource ColorSolidBrushConverter}, Mode=OneWay}"
                                        Content="Aqua"
                                        IconKind="Color"
                                        IsEnabled="{Binding DataController.SerialPortConnection.IsConnected}"
                                        MouseOverBackground="{Binding Source={StaticResource Colors.Aqua}, Converter={StaticResource ButtonInteractionColorConverter}, ConverterParameter={StaticResource HoverLight}, Mode=OneWay}"
                                        MouseOverBorderBrush="{Binding Source={StaticResource Colors.Aqua}, Converter={StaticResource ButtonInteractionColorConverter}, ConverterParameter={StaticResource HoverLight}, Mode=OneWay}"
                                        PressedBackground="{Binding Source={StaticResource Colors.Aqua}, Converter={StaticResource ButtonInteractionColorConverter}, ConverterParameter={StaticResource PressLight}, Mode=OneWay}"
                                        PressedBorderBrush="{Binding Source={StaticResource Colors.Aqua}, Converter={StaticResource ButtonInteractionColorConverter}, ConverterParameter={StaticResource PressLight}, Mode=OneWay}"
                                        Style="{StaticResource LedControlButtonExStyle}"
                                        Click="LedButtonEx_Click"/>

                                    <controlsex:ButtonEx
                                        x:Name="LedBrightBlueButtonEx"
                                        Background="{Binding Source={StaticResource Colors.BrightBlue}, Converter={StaticResource ColorSolidBrushConverter}, Mode=OneWay}"
                                        BorderBrush="{Binding Source={StaticResource Colors.BrightBlue}, Converter={StaticResource ColorSolidBrushConverter}, Mode=OneWay}"
                                        Content="BrightBlue"
                                        IconKind="Color"
                                        IsEnabled="{Binding DataController.SerialPortConnection.IsConnected}"
                                        MouseOverBackground="{Binding Source={StaticResource Colors.BrightBlue}, Converter={StaticResource ButtonInteractionColorConverter}, ConverterParameter={StaticResource HoverLight}, Mode=OneWay}"
                                        MouseOverBorderBrush="{Binding Source={StaticResource Colors.BrightBlue}, Converter={StaticResource ButtonInteractionColorConverter}, ConverterParameter={StaticResource HoverLight}, Mode=OneWay}"
                                        PressedBackground="{Binding Source={StaticResource Colors.BrightBlue}, Converter={StaticResource ButtonInteractionColorConverter}, ConverterParameter={StaticResource PressLight}, Mode=OneWay}"
                                        PressedBorderBrush="{Binding Source={StaticResource Colors.BrightBlue}, Converter={StaticResource ButtonInteractionColorConverter}, ConverterParameter={StaticResource PressLight}, Mode=OneWay}"
                                        Style="{StaticResource LedControlButtonExStyle}"
                                        Click="LedButtonEx_Click"/>

                                    <controlsex:ButtonEx
                                        x:Name="LedTurquoiseButtonEx"
                                        Background="{Binding Source={StaticResource Colors.Turquoise}, Converter={StaticResource ColorSolidBrushConverter}, Mode=OneWay}"
                                        BorderBrush="{Binding Source={StaticResource Colors.Turquoise}, Converter={StaticResource ColorSolidBrushConverter}, Mode=OneWay}"
                                        Content="Turquoise"
                                        IconKind="Color"
                                        IsEnabled="{Binding DataController.SerialPortConnection.IsConnected}"
                                        MouseOverBackground="{Binding Source={StaticResource Colors.Turquoise}, Converter={StaticResource ButtonInteractionColorConverter}, ConverterParameter={StaticResource HoverLight}, Mode=OneWay}"
                                        MouseOverBorderBrush="{Binding Source={StaticResource Colors.Turquoise}, Converter={StaticResource ButtonInteractionColorConverter}, ConverterParameter={StaticResource HoverLight}, Mode=OneWay}"
                                        PressedBackground="{Binding Source={StaticResource Colors.Turquoise}, Converter={StaticResource ButtonInteractionColorConverter}, ConverterParameter={StaticResource PressLight}, Mode=OneWay}"
                                        PressedBorderBrush="{Binding Source={StaticResource Colors.Turquoise}, Converter={StaticResource ButtonInteractionColorConverter}, ConverterParameter={StaticResource PressLight}, Mode=OneWay}"
                                        Style="{StaticResource LedControlButtonExStyle}"
                                        Click="LedButtonEx_Click"/>

                                </StackPanel>

                            </Border>

                            <Border
                                BorderBrush="Black"
                                BorderThickness="1"
                                CornerRadius="4"
                                Margin="4"
                                Padding="8">

                                <StackPanel
                                    Orientation="Horizontal">

                                    <controlsex:ButtonEx
                                        x:Name="LedBlueButtonEx"
                                        Background="{Binding Source={StaticResource Colors.Blue}, Converter={StaticResource ColorSolidBrushConverter}, Mode=OneWay}"
                                        BorderBrush="{Binding Source={StaticResource Colors.Blue}, Converter={StaticResource ColorSolidBrushConverter}, Mode=OneWay}"
                                        Content="Blue"
                                        IconKind="Color"
                                        IsEnabled="{Binding DataController.SerialPortConnection.IsConnected}"
