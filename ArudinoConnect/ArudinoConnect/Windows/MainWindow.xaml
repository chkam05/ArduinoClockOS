<Window
    x:Class="ArudinoConnect.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controlsex="clr-namespace:chkam05.Tools.ControlsEx;assembly=chkam05.Tools.ControlsEx"
    xmlns:conv="clr-namespace:ArudinoConnect.Converters"
    xmlns:local="clr-namespace:ArudinoConnect.Windows"
    mc:Ignorable="d"
    
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    Title="Arduino Connect"
    Height="450"
    Width="800">

    <Window.Resources>
        <ResourceDictionary>
            
            <!-- CONVERTERS -->
            <conv:BoolInversionConverter x:Key="BoolInversionConverter"/>
            <conv:SerialPortStateStringConverter x:Key="SerialPortStateStringConverter"/>

            <!-- DATA TEMPLATES -->
            <DataTemplate x:Key="DevicesDataTemplate">
                <TextBlock
                    Text="{Binding PortName}"/>
            </DataTemplate>
            
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <controlsex:TabControlEx
            Grid.Row="2">

            <controlsex:TabItemEx
                IconKind="Console"
                Header="Console">

                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <controlsex:TextBoxEx
                        Name="consoleTextBoxEx"
                        AcceptsReturn="True"
                        AcceptsTab="True"
                        BorderBrush="{x:Null}"
                        BorderThickness="0"
                        CornerRadius="0"
                        Grid.Row="0"
                        HorizontalContentAlignment="Left"
                        IsReadOnly="True"
                        Padding="4"
                        ScrollViewer.HorizontalScrollBarVisibility="Auto"
                        ScrollViewer.VerticalScrollBarVisibility="Visible"
                        Text="{Binding Console, Mode=OneWay}"
                        TextWrapping="NoWrap"
                        VerticalAlignment="Top"/>

                    <Border
                        Background="LightGray"
                        BorderBrush="DarkGray"
                        BorderThickness="0,1,0,0"
                        Grid.Row="1">

                        <Grid
                            Grid.Row="1"
                            Margin="4">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <controlsex:TextBoxEx
                                Background="White"
                                IsEnabled="{Binding SerialPortConnection.IsConnected}"
                                Grid.Column="0"
                                Margin="0,0,4,0"
                                MouseOverBackground="White"
                                SelectedBackground="White"
                                PreviewKeyDown="MessageTextBoxEx_PreviewKeyDown"
                                Text="{Binding ConsoleMessage}"/>

                            <controlsex:ButtonEx
                                Grid.Column="1"
                                Content="Send"
                                IconHeight="12"
                                IconKind="Send"
                                IsEnabled="{Binding SerialPortConnection.IsConnected}"
                                Click="ConsoleSendButtonEx_Click"/>

                        </Grid>
                    </Border>
                </Grid>
            </controlsex:TabItemEx>

        </controlsex:TabControlEx>

        <Border
            Background="LightGray"
            BorderBrush="DarkGray"
            BorderThickness="0,0,0,1"
            Grid.Row="0">

            <Grid>

                <StackPanel
                    HorizontalAlignment="Right"
                    Margin="4"
                    Orientation="Horizontal">

                    <controlsex:ComboBoxEx
                        IsEnabled="{Binding SerialPortConnection.IsConnected,
                            Mode=OneWay,
                            Converter={StaticResource BoolInversionConverter}}"
                        ItemsSource="{Binding DevicesCollection}"
                        ItemTemplate="{StaticResource DevicesDataTemplate}"
                        Margin="0,0,4,0"
                        SelectedItem="{Binding SelectedDevice}"/>

                    <controlsex:ComboBoxEx
                        IsEnabled="{Binding SerialPortConnection.IsConnected,
                            Mode=OneWay,
                            Converter={StaticResource BoolInversionConverter}}"
                        ItemsSource="{Binding BaudRatesCollection}"
                        Margin="0,0,4,0"
                        MinWidth="128"
                        SelectedItem="{Binding BaudRate}"/>

                    <controlsex:ButtonEx
                        Content="{Binding SerialPortConnection.IsConnected, 
                            Mode=OneWay,
                            Converter={StaticResource SerialPortStateStringConverter}}"
                        IconHeight="16"
                        IconMargin="0"
                        IconKind="Connection"
                        Click="ConnectionButtonEx_Click"/>

                </StackPanel>

            </Grid>

        </Border>

    </Grid>
    
</Window>
