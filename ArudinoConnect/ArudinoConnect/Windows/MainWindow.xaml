                                                MaxValue="23"
                                                Text="{Binding DtHour}"
                                                Width="54"/>

                                            <TextBlock
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Margin="1,0"
                                                Text=":"
                                                VerticalAlignment="Center"/>

                                            <controlsex:UpDownTextBoxEx
                                                ConversionType="Decimal"
                                                MinValue="0"
                                                MaxValue="59"
                                                Text="{Binding DtMinute}"
                                                Width="54"/>

                                            <TextBlock
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Margin="1,0"
                                                Text=":"
                                                VerticalAlignment="Center"/>

                                            <controlsex:UpDownTextBoxEx
                                                ConversionType="Decimal"
                                                MinValue="0"
                                                MaxValue="59"
                                                Text="{Binding DtSecond}"
                                                Width="54"/>

                                        </StackPanel>

                                        <controlsex:CheckBoxEx
                                            CheckMarkHeight="24"
                                            CheckBoxStyle="Bordered"
                                            CheckMarkWidth="24"
                                            Content="System date &amp; time"
                                            IsChecked="{Binding DtAuto}"
                                            Margin="0,8,0,0"/>

                                    </StackPanel>

                                    <Border
                                        BorderBrush="Black"
                                        BorderThickness="0,1,0,0"
                                        Grid.Row="1"
                                        Margin="-8,8,-8,0">

                                        <controlsex:ButtonEx
                                            Content="Upload"
                                            HorizontalAlignment="Right"
                                            IconHeight="12"
                                            IconKind="TrayUpload"
                                            IsEnabled="{Binding DataController.SerialPortConnection.IsConnected}"
                                            Margin="8,8,8,0"
                                            Padding="8,4"
                                            Click="UploadDateTimeConfigurationButtonEx_Click"/>

                                    </Border>

                                </Grid>

                            </Border>

                            <Border
                                BorderBrush="Black"
                                BorderThickness="1"
                                CornerRadius="4"
                                Margin="4"
                                MinWidth="192"
                                Padding="8">

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel
                                        Orientation="Vertical">

                                        <TextBlock
                                            Margin="0,0,0,4"
                                            Text="Alarm:"/>

                                        <StackPanel
                                            Orientation="Horizontal">

                                            <controlsex:UpDownTextBoxEx
                                                MinValue="0"
                                                MaxValue="23"
                                                Text="{Binding AlarmHour}"
                                                Width="54"/>

                                            <TextBlock
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Margin="1,0"
                                                Text=":"
                                                VerticalAlignment="Center"/>

                                            <controlsex:UpDownTextBoxEx
                                                ConversionType="Decimal"
                                                MinValue="0"
                                                MaxValue="59"
                                                Text="{Binding AlarmMinute}"
                                                Width="54"/>

                                        </StackPanel>

                                        <controlsex:CheckBoxEx
                                            CheckMarkHeight="24"
                                            CheckBoxStyle="Bordered"
                                            CheckMarkWidth="24"
                                            Content="Enabled"
                                            IsChecked="{Binding AlarmSet}"
                                            Margin="0,8,0,0"/>

                                    </StackPanel>

                                    <Border
                                        BorderBrush="Black"
                                        BorderThickness="0,1,0,0"
                                        Grid.Row="1"
                                        Margin="-8,8,-8,0">

                                        <controlsex:ButtonEx
                                            Content="Upload"
                                            HorizontalAlignment="Right"
                                            IconHeight="12"
                                            IconKind="TrayUpload"
                                            IsEnabled="{Binding DataController.SerialPortConnection.IsConnected}"
                                            Margin="8,8,8,0"
                                            Padding="8,4"
                                            Click="UploadAlarmConfigurationButtonEx_Click"/>

                                    </Border>

                                </Grid>

                            </Border>

                            <Border
                                BorderBrush="Black"
                                BorderThickness="1"
                                CornerRadius="4"
                                Margin="4"
                                MinWidth="192"
                                Padding="8">

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel
                                        Orientation="Vertical">

                                        <TextBlock
                                            Margin="0,0,0,8"
                                            Text="Brightness:"/>

                                        <controlsex:SliderEx
                                            HorizontalAlignment="Stretch"
                                            Minimum="0"
                                            Maximum="8"
                                            Margin="8,0"
                                            ThumbCornerRadius="8"
                                            ThumbHeight="12"
                                            ThumbWidth="12"
                                            TickPlacement="Both"
                                            TickFrequency="1"
                                            Value="{Binding Brightness}"/>

                                        <controlsex:CheckBoxEx
                                            CheckMarkHeight="24"
                                            CheckBoxStyle="Bordered"
                                            CheckMarkWidth="24"
                                            Content="Auto"
                                            IsChecked="{Binding BrightnessAuto}"
                                            Margin="0,8,0,0"/>

                                    </StackPanel>

                                    <Border
                                        BorderBrush="Black"
                                        BorderThickness="0,1,0,0"
                                        Grid.Row="1"
                                        Margin="-8,8,-8,0">

                                        <controlsex:ButtonEx
                                            Content="Upload"
                                            HorizontalAlignment="Right"
                                            IconHeight="12"
                                            IconKind="TrayUpload"
                                            IsEnabled="{Binding DataController.SerialPortConnection.IsConnected}"
                                            Margin="8,8,8,0"
                                            Padding="8,4"
                                            Click="UploadBrightnessConfigurationButtonEx_Click"/>

                                    </Border>

                                </Grid>

                            </Border>

                            <Border
                                BorderBrush="Black"
                                BorderThickness="1"
                                CornerRadius="4"
                                Margin="4"
                                MinWidth="192"
                                Padding="8">

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel
                                        Orientation="Vertical">

                                        <TextBlock
                                            Margin="0,0,0,4"
                                            Text="Hour Beeping:"/>

                                        <controlsex:ComboBoxEx
                                            ItemTemplate="{StaticResource HourBeepDataTemplate}"
                                            ItemsSource="{Binding HourBeepCollection}"
                                            MinWidth="128"
                                            SelectedItem="{Binding HourBeep}"/>

                                    </StackPanel>

                                    <Border
                                        BorderBrush="Black"
                                        BorderThickness="0,1,0,0"
                                        Grid.Row="1"
                                        Margin="-8,8,-8,0">

                                        <controlsex:ButtonEx
                                            Content="Upload"
                                            HorizontalAlignment="Right"
                                            IconHeight="12"
                                            IconKind="TrayUpload"
                                            IsEnabled="{Binding DataController.SerialPortConnection.IsConnected}"
                                            Margin="8,8,8,0"
                                            Padding="8,4"
                                            Click="UploadHourBeepConfigurationButtonEx_Click"/>

                                    </Border>

                                </Grid>

                            </Border>

                        </WrapPanel>
                        
                    </controlsex:ScrollViewerEx>

                    <Border
                        Background="LightGray"
                        BorderBrush="DarkGray"
                        BorderThickness="0,1,0,0"
                        Grid.Row="1"
                        MinHeight="35">

                        <Grid
                            Grid.Row="1"
                            Margin="4">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel
                                Grid.Column="1"
                                Orientation="Horizontal">

                                <controlsex:ButtonEx
                                    Grid.Column="1"
                                    Content="Upload to Arduino"
                                    IconHeight="12"
                                    IconKind="TrayUpload"
                                    IsEnabled="{Binding DataController.SerialPortConnection.IsConnected}"
                                    Margin="0,0,4,0"
                                    Click="UploadAllConfigurationButtonEx_Click"/>
                                
                                <controlsex:ButtonEx
                                    Grid.Column="1"
                                    Content="Load from Arduino"
                                    IconHeight="12"
                                    IconKind="TrayDownload"
                                    IsEnabled="{Binding DataController.SerialPortConnection.IsConnected}"
                                    Click="DownloadConfigurationButtonEx_Click"/>

                            </StackPanel>

                        </Grid>
                    </Border>

                </Grid>

            </controlsex:TabItemEx>

        </controlsex:TabControlEx>

        <Border
            Background="LightGray"
            BorderBrush="{x:Null}"
            BorderThickness="0"
            Grid.Row="0"
            Margin="0,0,0,-1"
            Padding="0,0,0,1">

            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel
                    Grid.Column="0"
                    Margin="4"
                    Orientation="Horizontal">

                    <controlsex:ButtonEx
                        IconHeight="16"
                        IconMargin="0"
                        IconKind="Bluetooth"
                        Click="ConnectionBluetoothButtonEx_Click"/>

                </StackPanel>

                <StackPanel
                    Grid.Column="2"
                    Margin="4"
                    Orientation="Horizontal">

                    <controlsex:ComboBoxEx
                        IsEnabled="{Binding DataController.SerialPortConnection.IsConnected,
                            Mode=OneWay,
                            Converter={StaticResource BoolInversionConverter}}"
                        ItemsSource="{Binding DevicesCollection}"
                        ItemTemplate="{StaticResource DevicesDataTemplate}"
                        Margin="0,0,4,0"
                        SelectedItem="{Binding SelectedDevice}"/>

                    <controlsex:ComboBoxEx
                        IsEnabled="{Binding DataController.SerialPortConnection.IsConnected,
                            Mode=OneWay,
                            Converter={StaticResource BoolInversionConverter}}"
                        ItemsSource="{Binding BaudRatesCollection}"
                        Margin="0,0,4,0"
                        MinWidth="128"
                        SelectedItem="{Binding BaudRate}"/>

                    <controlsex:ButtonEx
                        Content="{Binding DataController.SerialPortConnection.IsConnected, 
                            Mode=OneWay,
                            Converter={StaticResource SerialPortStateStringConverter}}"
                        IconHeight="16"
                        IconMargin="0"
                        IconKind="Connection"
                        Click="ConnectionButtonEx_Click"/>

                </StackPanel>

            </Grid>

        </Border>

        <im:InternalMessagesExContainer
            x:Name="InternalMessagesExContainer"
            Grid.RowSpan="3"/>

    </Grid>
    
</Window>
